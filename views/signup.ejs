<%- include ("partials/signupLoginHeader") -%>

    
    <main class="form-signin w-100 m-auto">
        <form action="/signup" method="post" name="signupform">
          <h1 class="h3 mb-3 fw-normal">Sign Up</h1>
       
      
          
          <div class="form-floating">
            <input type="text" name="username" id="username" class="form-control top"  placeholder="Username" required>
            <label for="username">Username</label>
          </div>
          <div class="form-floating">
              <input type="text" id="email" name="email" class="form-control middle"  placeholder="name@example.com" required>
              <label for="email">Email address</label>
            </div>
          <div class="form-floating">
              <input type="password" name="createps" id="createps" class="form-control middle"  placeholder="Create Password" required>
              <label for="createps">Create Password</label>
            </div>
            <div class="form-floating">
              <input type="password" name="confirmps" id="confirmps" class="form-control bottom" placeholder="COnfirm Password" required>
              <label for="confirmps">Confirm Password</label>
            </div>

            <div class="checkbox mb-3">
                <label>
                  <input type="checkbox"  id="termCon" name="termCon" value="termCon"> I agree to the terms and conditions
                </label>
              </div>
            
      
          
          <button class="w-100 btn btn-lg btn-primary" type="submit">Create Account</button>
          <p class="mt-5 mb-3 text-muted">&copy; ProjectValued 2022</p>
        </form>
      </main>
      
      <%- include ("partials/signupLoginFooter") -%>

      
      
